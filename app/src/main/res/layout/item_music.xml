<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@color/teal_200" />

    <TextView
        android:id="@+id/txvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_toEndOf="@id/img"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="@string/label_song_name" />

    <TextView
        android:id="@+id/txvArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txvName"
        android:textSize="14sp"
        android:layout_marginHorizontal="4dp"
        android:layout_toEndOf="@id/img"
        android:text="@string/label_artist" />

    <TextView
        android:id="@+id/txvAlbums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txvArtist"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="4dp"
        android:layout_toEndOf="@id/img"
        android:text="@string/label_albums" />

</RelativeLayout>